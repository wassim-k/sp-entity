{
    "compilerOptions": {
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "es5",
            "es2015.promise",
            "dom"
        ],
        "types": [
            "node"
        ],
        "noUnusedLocals": true,
        "module": "commonjs",
        "target": "es5",
        "moduleResolution": "node",
        "strict": true,
        "removeComments": true,
        "outDir": "lib",
        "skipLibCheck": true,
        "sourceMap": true,
    },
    "files": [
        "./src/index.ts"
    ]
}
